#!/usr/bin/env bash
function _load_conf() {
  for conf in "$1"/confs/*.conf.sh; do
    [ -e "${conf}" ] && PROFILE_WORKING_PATH="$1" source "${conf}"
  done
  return 0
}

PROFILE_PATH="${HOME}/.profile.d"
PLATFORM="$(uname)"

export PATH="$PATH:$HOME/bin"

_load_conf "${PROFILE_PATH}/base"
_load_conf "${PROFILE_PATH}/${PLATFORM}"
