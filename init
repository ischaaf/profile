load_conf() {
  for conf in "$1"/*.conf; do
    [ -e "${conf}" ] && source "${conf}"
  done
  return 0
}

PROFILE_PATH="${HOME}/.profile.d"
PLATFORM=`uname`

if [ -z "$USER" ]; then
  export USER="$LOGNAME"
fi

load_conf "${PROFILE_PATH}"
load_conf "${PROFILE_PATH}/${PLATFORM}"
load_conf "${PROFILE_PATH}/users/${USER}"
load_conf "${PROFILE_PATH}/users/${USER}/${PLATFORM}"

