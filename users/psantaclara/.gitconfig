[user]
	email = psantaclara@relaynetwork.com
	name = Paul Santa Clara 
[core]
	excludesfile = /home/psantaclara/.gitignore

[color]
        ui = auto
        diff = auto
        status = auto
        interactive = auto
[alias]
        st = status
        au = add -u
        pt = add --patch
        ci = commit -v
        cia = commit -av
        br = branch
        co = checkout
        df = diff
        dfc = diff --cached
        lg = log -p
        spull = !git-svn fetch && git-svn rebase --local
        spush = !git-svn dcommit
        pob = !bash -l -c "'. ~/.bashrc; git pull origin $(__git_ps1 \"%s\")'"
        pub = !bash -l -c "'. ~/.bashrc; git push origin $(__git_ps1 \"%s\")'"
        lg = log -p
